<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewModeleUser"
        android:layout_width="395dp"
        android:layout_height="173dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="8dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/imgChoixLocal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="30dp"
                android:layout_marginEnd="180dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/img_maison" />

            <TextView
                android:id="@+id/txtTypeLocal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="185dp"
                android:layout_marginBottom="15dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:fontFamily="@font/calibri"
                android:textSize="20sp"
                android:text="Maison"
                app:layout_constraintStart_toStartOf="@+id/imgChoixLocal"
                app:layout_constraintTop_toBottomOf="@+id/imgChoixLocal" />

            <TextView
                android:id="@+id/txtNomChoixLocal"
                android:layout_width="160dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/gotham"
                android:text="Maison principale"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imgChoixLocal"
                app:layout_constraintTop_toTopOf="@+id/imgChoixLocal" />

            <TextView
                android:id="@+id/txtQuartierChoixLocal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="CitÃ© El Omrane"
                android:fontFamily="@font/calibri"
                android:textSize="14sp"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="@+id/txtNomChoixLocal"
                app:layout_constraintStart_toStartOf="@+id/txtNomChoixLocal"
                app:layout_constraintTop_toBottomOf="@+id/txtNomChoixLocal" />

            <TextView
                android:id="@+id/txtVilleChoixLocal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Monastir"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/txtQuartierChoixLocal"
                app:layout_constraintStart_toStartOf="@+id/txtQuartierChoixLocal"
                app:layout_constraintTop_toBottomOf="@+id/txtQuartierChoixLocal" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
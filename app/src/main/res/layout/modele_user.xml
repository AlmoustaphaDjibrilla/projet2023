<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewModeleUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="8dp"
        android:backgroundTint="@color/lavender"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="10dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/profilUserTrouve"
                android:layout_width="101dp"
                android:layout_height="103dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/icon_profil"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/icon_profil" />

            <TextView
                android:id="@+id/nomUserModel"
                android:layout_width="231dp"
                android:layout_height="28dp"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/calibri"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/profilUserTrouve"
                app:layout_constraintTop_toTopOf="@+id/profilUserTrouve" />

            <TextView
                android:id="@+id/mailUserModel"
                android:layout_width="234dp"
                android:layout_height="23dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/calibri"
                android:textAlignment="center"
                android:textColor="#4b4b4b"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/nomUserModel"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/nomUserModel"
                app:layout_constraintTop_toBottomOf="@+id/nomUserModel" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="EnregistrÃ© le"
                android:textAlignment="textStart"
                android:textColor="#4b4b4b"
                app:layout_constraintStart_toStartOf="@+id/mailUserModel"
                app:layout_constraintTop_toBottomOf="@+id/mailUserModel" />

            <TextView
                android:id="@+id/dateEnregistrementUserModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/calibri"
                android:textAlignment="textEnd"
                android:textColor="#4b4b4b"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintTop_toTopOf="@+id/textView7" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>